@model IEnumerable<CybProjWeb.Entities.Role>
@{
    ViewBag.Title = "All Roles";
}
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-rounded btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                No roles created yet.
            </div>
            <div class="card-body">
                <h4 class="card-title">List of roles</h4>
            </div>

        </div>
        </div>
        }
